{
  "name": "d_eye",
  "productName": "d_Eye",
  "version": "2.0.2",
  "description": "An app to remind you to take breaks for your eyes.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "build": "electron-builder -wml",
    "build-linux": "electron-builder -l",
    "build-windows": "electron-builder -w",
    "build-mac": "electron-builder -m"
  },
  "build": {
    "win": {
      "icon": "src/assets/icons/icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "src/assets/icons/icon.png",
      "target": ["deb", "tar.gz"],
      "category": "Utility"
    },
    "mac": {
      "icon": "src/assets/icons/icon.png",
      "target": "tar.gz",
      "category": "public.app-category.utilities"
    },
    "appId": "com.daydreamercodes.eyereminder",
    "copyright": "Copyright Â© 2021 ${author}"
  },
  "author": {
    "name": "Daydreamer",
    "email": "51serhatsivrikaya@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-store": "^6.0.1",
    "glasstron": "^0.0.6",
    "humanize-duration": "^3.25.1"
  },
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1"
  }
}
